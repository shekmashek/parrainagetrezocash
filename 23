import React, { useState } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '../ui/Card';
import { Copy, Check } from 'lucide-react';

const ReferralLinkCard = ({ referralCode }) => {
  const [copied, setCopied] = useState(false);
  const link = `https://trezo.cash/invite/${referralCode}`;

  const handleCopy = () => {
    navigator.clipboard.writeText(link);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  return (
    <Card>
      <CardHeader>
        <CardTitle>Mon Écosystème de Parrainage</CardTitle>
      </CardHeader>
      <CardContent>
        <p className="text-sm text-muted-foreground mb-2">Lien principal</p>
        <div className="flex items-center gap-2 p-2 bg-secondary rounded-md">
          <input 
            type="text" 
            readOnly 
            value={link}
            className="flex-1 bg-transparent text-sm outline-none"
          />
          <button onClick={handleCopy} className="p-2 rounded-md hover:bg-muted transition-colors">
            {copied ? <Check className="h-4 w-4 text-green-400" /> : <Copy className="h-4 w-4" />}
          </button>
        </div>
      </CardContent>
    </Card>
  );
};

export default ReferralLinkCard;
