import React from 'react';
import { X } from 'lucide-react';
import { Card, CardContent, CardHeader, CardTitle } from '../ui/Card';

const ActiveReferralsModal = ({ paymentRecord, tier, onClose }) => {
  if (!paymentRecord || !tier) return null;

  const formatDate = (dateString) => {
    return new Date(dateString).toLocaleDateString('fr-FR', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
    });
  };

  return (
    <div
      className="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
      onClick={onClose}
    >
      <Card
        className="w-full max-w-3xl max-h-[90vh] overflow-y-auto m-4"
        onClick={(e) => e.stopPropagation()}
      >
        <CardHeader className="flex flex-row items-start justify-between sticky top-0 bg-card/95 backdrop-blur z-10 p-6">
          <div>
            <CardTitle className="text-xl">Détail du Paiement - {paymentRecord.month}</CardTitle>
            <p className="text-muted-foreground">Filleuls ayant contribué à la commission de ce mois.</p>
          </div>
          <button onClick={onClose} className="p-2 rounded-full hover:bg-muted">
            <X className="h-6 w-6 text-muted-foreground" />
          </button>
        </CardHeader>
        <CardContent className="p-6">
          <div className="p-4 bg-secondary rounded-lg mb-6 text-center">
            <h5 className="text-sm font-semibold text-muted-foreground mb-2">Calcul de la Commission</h5>
            <div className="flex items-center justify-center space-x-2 md:space-x-4 text-base md:text-lg font-mono flex-wrap">
                <span className="text-foreground">€{paymentRecord.totalCommissionableRevenue.toFixed(2)}</span>
                <span className="text-muted-foreground">×</span>
                <span className="text-foreground">{tier.commission * 100}%</span>
                <span className="text-muted-foreground">=</span>
                <span className="font-bold text-primary">€{paymentRecord.commission.toFixed(2)}</span>
            </div>
            <p className="text-xs text-muted-foreground mt-2">(Total revenus filleuls × Taux de commission {tier.name})</p>
          </div>

          <div className="overflow-x-auto border rounded-lg">
            <table className="w-full text-sm text-left">
              <thead className="text-xs text-muted-foreground uppercase bg-secondary">
                <tr>
                  <th scope="col" className="px-6 py-3">Nom du Filleul</th>
                  <th scope="col" className="px-6 py-3">Pack Souscrit</th>
                  <th scope="col" className="px-6 py-3 text-right">Base de Commission</th>
                  <th scope="col" className="px-6 py-3 text-right">Date de Paiement</th>
                </tr>
              </thead>
              <tbody>
                {paymentRecord.activeReferralsList?.map((referral) => (
                  <tr key={referral.id} className="border-b border-border last:border-0 hover:bg-muted/50">
                    <td className="px-6 py-4 font-medium">{referral.name}</td>
                    <td className="px-6 py-4 text-muted-foreground">{referral.packName}</td>
                    <td className="px-6 py-4 text-right font-mono">€{(referral.commissionableValue || 0).toFixed(2)}</td>
                    <td className="px-6 py-4 text-right text-muted-foreground">{formatDate(referral.paymentDateInMonth)}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
          <div className="flex justify-end pt-6">
             <button 
                onClick={onClose} 
                className="px-6 py-2 text-sm font-medium border border-border rounded-md hover:bg-muted transition-colors"
              >
                Fermer
              </button>
          </div>
        </CardContent>
      </Card>
    </div>
  );
};

export default ActiveReferralsModal;
